<% content_for :title do %>
  moedinhas
<% end %>

<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <!--<td><img src="<#%= coin.url_image%>" width=25px, height=25px/></td>z -->
        <td><#%= image_tag coin.url_image, size: "25x25"%><%= coin.url_image %></td>
        <td><%= link_to 'Mostrar', coin_path(coin.id) %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destruir', coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Coin', new_coin_path %>
